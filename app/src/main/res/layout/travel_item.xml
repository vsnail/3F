<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:descendantFocusability="blocksDescendants"> //焦點給行

        <ImageView
            android:id="@+id/pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/add_collect"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:src="@mipmap/collect_unselect"
            />

        <Button
            android:id="@+id/add_plan"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_below="@id/add_collect"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:onClick="addplan"
            android:background="@drawable/shape_myaward_btn"
            android:text="複&#10;製"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/textbox"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_toRightOf="@id/pic"
            android:layout_toLeftOf="@id/add_collect"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:text="景點名稱"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#999"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/region"
                android:text="縣市"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="6dp"
                android:layout_below="@id/title" />
            <TextView
                android:id="@+id/town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鄉鎮"
                android:textSize="12sp"
                android:textColor="#999"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/title"
                android:layout_toRightOf="@id/region"/>
            <TextView
                android:id="@+id/content"
                android:text="景點介紹"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="#999"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:layout_below="@id/region"/> //ellipsize內容過多省略
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>